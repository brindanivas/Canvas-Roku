<component name="EpgCategoryItem" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/controls/EpgCategoryItem/EpgCategoryItem.brs" />
    <script type="text/brightscript" uri="pkg:/source/helpers/HelpFuncs.brs"/>
    <script type="text/brightscript" uri="pkg:/source/helpers/FocusHandler.brs"/>
    <interface>
        <field id="itemContent" type="node" onChange="itemContentChanged" />
        <field id="focusPercent" type="float" onChange="onFocusPercentChange" />
        <field id="gridHasFocus" type="boolean" onChange="onGridFocusChange"/>
        <field id="itemHasFocus" type="boolean" onChange="onFocusChanged" alwaysNotify="true"/>
    </interface>

    <children>
        <Group id="categoryItemGrp">
            <Label id="categoryName" width="300" />
            <Label id="focusCategoryName" width="300" opacity="0"/>
        </Group>
    </children>
</component>
