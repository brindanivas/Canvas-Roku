<?xml version="1.0" encoding="utf-8" ?>
<component name="ExitDialog" extends="Group">
    <script type="text/brightscript" uri="ExitDialog.brs"/>

    <interface>
        <field id="selectedButton" type="integer" alwaysNotify="true"/>
        <field id="isExit" type="boolean" alwaysNotify="true"/>
        <field id="isresumebox" type="boolean" alwaysNotify="true" onChange="onIsResumeBoxChanged"/>
        <field id="message" type="string" alias="message.text" alwaysNotify="true"/>
        <field id="posterURL" type="string" alwaysNotify="true" onChange="onPosterImageChanged"/>
        <field id="yesBtnText" type="string" alias="lYes.text" alwaysNotify="true"/>
        <field id="noBtnText" type="string" alias="lNo.text" alwaysNotify="true"/>
    </interface>

    <children>
    	<Group id="gConfirmation" opacity="0">
    		<Rectangle id="rBackground" width="1920" height="1080" color="#000000" opacity="0"/>
        <Poster id="pImage" uri="pkg:/images/assets/poster_fhd.png" width="540" height="405" translation="[690,150]"/>
        <Label id="message" width="1920" translation="[0,650]" wrap="true" maxLines="3" lineSpacing="0" vertAlign="center" horizAlign="center" color="#FFFFFF"/>

        <LayoutGroup id="lgButtons" layoutDirection="horiz" itemSpacings="25" translation="[747,750]">
          <Poster id="bNo" uri="pkg:/images/focus/filled.9.png" width="200" height="80">
            <Label id="lNo" text="" width="200" height="80" horizAlign="center" vertAlign="center"/>
          </Poster>

          <Poster id="bYes" uri="pkg:/images/focus/filled.9.png" width="200" height="80">
              <Label id="lYes" text="" width="200" height="80" horizAlign="center" vertAlign="center"/>
          </Poster>
        </LayoutGroup>
    	</Group>

      <SequentialAnimation id="showAnimation">
        <Animation duration="0.1" easeFunction="linear">
            <FloatFieldInterpolator key= "[0, 0.3, 0.6, 1]" keyValue= "[0.3, 0.5, 0.7, 0.9]" fieldToInterp="rBackground.opacity"/>
        </Animation>

        <Animation duration="0.3" easeFunction="linear">
            <FloatFieldInterpolator key= "[0, 0.3, 0.6, 1]" keyValue= "[0.3, 0.5, 0.7, 1]" fieldToInterp="gConfirmation.opacity"/>
  			</Animation>
      </SequentialAnimation>
    </children>
</component>
