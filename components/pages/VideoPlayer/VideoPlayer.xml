<?xml version="1.0" encoding="utf-8" ?>
<component name="VideoPlayer" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/pages/VideoPlayer/VideoPlayer.brs"/>
    <script type="text/brightscript" uri="pkg:/source/helpers/HelpFuncs.brs"/>
    <script type="text/brightscript" uri="pkg:/source/helpers/Globals.brs"/>
    <interface>
        <field id="contentPlaylist" type="node" alwaysNotify="true" />
        <field id="contentIndex" type="integer" alwaysNotify="true" />
        <field id="content" type="node" alwaysNotify="true" onChange="OnContentChange" />
        <field id="metaInfo" type="AssocArray" alwaysnotify="true"/>
        <field id="SetAnimation" type="boolean" value="true" alwaysNotify="true" />
        <field id="vastURL" type="string" alwaysNotify="true" />
        <field id="isTrailer" type="boolean" value="false" alwaysNotify="true" />
        <field id="isVideoPlayerStopped" type="boolean" alwaysNotify="true"/>
        <function name="ClosePlayer"/>
    </interface>
    <children>
        <Video id="VideoPlayer" width="1920" height="1080" visible="false"/>
        <MMTask id="MM"/>
        <PlayerOverlay id="PlayerOverlay" visible="false"/>
        <Rectangle id="blackRect" color="#000000" width="1920" height="1080"/>
        <Animation id="startanimation" duration="0.5" repeat="false" easeFunction="linear" >
            <FloatFieldInterpolator id = "widthInterop" key="[0.0, 1.0]"
            keyValue="[ 160.0, 1920.0]" fieldToInterp="blackRect.width" />
            <FloatFieldInterpolator id = "heightInterop" key="[0.0, 1.0]"
            keyValue="[ 90.0, 1080.0]" fieldToInterp="blackRect.height" />
            <Vector2DFieldInterpolator id = "transInterop" key="[0.0, 1.0]"
            keyValue="[ [880.0, 375.0], [0.0, 0.0] ]" fieldToInterp="blackRect.translation" />
        </Animation>
        <Animation id="fadeOutControls" duration="1.5" repeat="false" easeFunction="linear">
            <FloatFieldInterpolator id="opacityInterpo" key="[0.0, 0.5, 1.0]" keyValue="[ 1.0, 0.5, 0.0 ]" fieldToInterp="PlayerOverlay.opacity"/>
        </Animation>
        <Group id="loading" translation="[1780,80]">
            <Label id="LoadingPer" text="" width="60" height="60" horizAlign="center" vertAlign="center"/>
            <BusySpinner id="LoadingIndicator" clockwise="true" spinInterval="1"/>
        </Group>
        <Timer id="hideControlsTimer" repeat="false" duration="5"/>
    </children>
</component>